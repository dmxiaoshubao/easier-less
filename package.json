{
  "name": "easy-to-use-less-vue",
  "displayName": "easy-use-less-vue",
  "description": "一个简单方便使用less的vscode插件(支持在vue sfc中运行)",
  "version": "0.0.4",
  "publisher": "dmxiaoshubao",
  "repository": "https://github.com/dmxiaoshubao/easier-less",
  "license": "MIT",
  "icon": "images/less-for-vue.png",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:less","onLanguage:vue"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "type": "object",
      "title": "easier-less插件配置",
      "properties": {
        "less.files": {
          "type": "array",
          "scope": "window",
          "description": "less文件"
        },
        "less.notice": {
          "type": "boolean",
          "scope": "window",
          "default": true,
          "description": "是否开启通知"
        },
        "less.suppressNotice": {
          "type": "boolean",
          "scope": "resource",
          "default": false,
          "description": "不再提示选择mixin文件（项目级别）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint --fix src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "npm run test:unit",
    "test:unit": "mocha \"test/unit/**/*.test.js\" --timeout 10000"
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^1.3.0"
  }
}
